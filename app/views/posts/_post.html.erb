<div class="card-body custom-card mb-3" onclick="window.location='<%= post_path(post) %>';" style="cursor: pointer;">
  <div class="row">
    <div class="col-sm-2">
      <% if post.user.avatar_resized.attached? %>
        <%= image_tag post.user.avatar_resized, class: 'user-avatar-post' %>
      <% else %>
        <%= image_tag "/images/default_avatar100x100.jpg", class: 'user-avatar-post' %>
      <% end %>
    </div>

    <div class="col-sm-10">
      <section class="card-text">
        <h2>
          <%= link_to post.user.username, user_path(post.user.id), class: 'user-link' %>
        </h2>

        <time>
          <small><%= post.formatted_created_at %></small>
        </time>

        <div class="my-2">
          <p>
            <%= post.body %>
          </p>
        </div>

        <div class="buttons-container">
          <div class="post-left-button">
            <% if policy(post).edit? %>
              <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %>
            <% end %>

            <% if policy(post).destroy? %>
              <%= button_to 'Delete', post_path(post), class: 'btn btn-danger',
                            method: :delete, data: { confirm: "Are you sure?" } %>
            <% end %>
          </div>

          <% if params[:action] == 'index' || params[:controller] == 'users' && params[:action] == 'show' %>
            <div class="post-right-button">
              <%= link_to "#{post.comments.count} comments", post_path(post), class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</div>