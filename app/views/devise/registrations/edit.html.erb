<div class="container">
  <div class="card custom-user-card">
    <div class="row">
      <div class="col-md-5">
        <% if @user.avatar_resized.attached? %>
        <%= link_to image_tag(@user.avatar_resized, class: 'user-avatar mb-2'),
                    @user.avatar, data: { toggle: 'lightbox'} %>
        <% else %>
        <%= link_to image_tag("/images/default_avatar.jpg", class: 'user-avatar mb-2'),
                    "/images/default_avatar.jpg", data: { toggle: 'lightbox'} %>
        <% end %>

        <%= form_with model: @user, local: true do |form| %>
          <%= form.file_field :avatar, class: 'form-control mb-2' %>
          <%= form.submit "Upload Avatar", class: 'btn btn-primary' %>
        <% end %>
        </div>

        <div class="col-md-7">
        <h2><%= @user.username %> </h2>
          
        <%= link_to "Back", :back, class: 'btn btn-primary btn-small mb-2' %>
      </div>
    </div>
  </div>


  <br>

  <div class="card">
    <div class="card-header">
      <h2>Edit your profile: </h2>
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
        </div>

        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username, autocomplete: "username", class: 'form-control form-control-lg' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-lg' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg' %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control form-control-lg mb-2' %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: 'btn btn-warning btn-lg mb-2' %>
        </div>
      <% end %>

      <br>
      <h3>Danger zone: </h3>
      <div><%= button_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-sm mb-2' %></div>
    </div>
  </div>
</div>






