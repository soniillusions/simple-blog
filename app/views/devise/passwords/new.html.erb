<div class="card">
  <div class="card-header text-center">
    <h2>Forgot your password?</h2>
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg mb-2' %>
      </div>

      <div class="actions">
        <%= f.submit "Reset password", class: 'btn btn-primary btn-lg mb-2' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


