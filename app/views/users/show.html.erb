<div class="container">
  <%= turbo_frame_tag 'user-card' do %>
     <%= render 'user_card', user: @user, editable: false %>
  <% end %>

  <br>

  <div class="row">
    <h2>Last posts by <%= @user.username %>:</h2>

    <%= render @posts %>

    <div class="d-flex justify-content-center my-3">
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  </div>
</div>